# Smart Pilot Environment Configuration
# Copy this file to .env and update values for your environment

# Application Environment
NODE_ENV=development

# Backend API Configuration (via Nginx Proxy)
BACKEND_URL=https://192.168.2.5
API_BASE_URL=https://192.168.2.5

# WebSocket Configuration (via Nginx Proxy)
WS_URL=wss://192.168.2.5/ws
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10
WS_PING_INTERVAL=30000

# Authentication Endpoints
AUTH_ENDPOINT=/api/v1/auth/windows
REFRESH_ENDPOINT=/api/v1/auth/refresh

# Application Configuration
APP_NAME=Smart Pilot
APP_VERSION=0.1.0

# Logging
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true

# Development Options
ENABLE_DEV_TOOLS=true
ENABLE_HOT_RELOAD=true

# Development (Direct to Backend - Bypasses Nginx)
# BACKEND_URL=http://localhost:8001
# WS_URL=ws://localhost:8001/ws
# API_BASE_URL=http://localhost:8001

# Production (Future Domain Setup)
# BACKEND_URL=https://smartflow.insurancedata.nl
# WS_URL=wss://smartflow.insurancedata.nl/ws
# API_BASE_URL=https://smartflow.insurancedata.nl
# LOG_LEVEL=error
# ENABLE_CONSOLE_LOGS=false
# ENABLE_DEV_TOOLS=false
